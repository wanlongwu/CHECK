

<h3 class="text-center">Result</h3>

<div class="container">
  <div class="row">
    <div class="photo col-sm-4">
      <%= image_tag @assessment.photo.url %>
    </div>
    <div class="suggestion col-sm-6">
      Your shoulder angle is:
      <%= @assessment.angle1.to_i %> degree <p>
      Your hip angle is: <%= @assessment.angle2.to_i %> degree
      <p> Your knee angle is: <%= @assessment.angle3.to_i %> degree
      <p>
      Here is the exercises that we suggest:
      <div class="assessment-video">
        <% @programs.each do |program| %>
          <iframe width="176.4" height="132.3"
          src= <%= program.exercise.content %> >
          </iframe>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
<p>

<% if user_signed_in? %>

  <%= link_to "Profile page", user_path(current_user), :class => "btn btn-primary" %>

<% else %>
  <%= link_to "Create an account to do more stuff", new_user_registration_path %>

<% end %>


