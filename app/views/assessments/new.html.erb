<% content_for :meta_title, "assess yourself" %>
<% content_for :meta_description %>
<% content_for :meta_image %>

<div class="container cam-big-contriner">
  <div class="row">
    <h2>Check Posture Cam</h2>
    <h4 class="text-center">The check cam will evaluate your posture as viewed from the side, please read the instructions for better result.</h5>
  </div>
  <div class="main-container">
    <div class="instructions-container">
      <h3 class="text-center">Instructions:</h3>
      <ul id="instruction1">
        <li> <h5> 1. Adjust the camera angle </h5> </li>
        <li> <h5> 2. Click on the camera button </h5> </li>
        <li> <h5> 3. Take 4 or 5 steps back </h5> </li>
        <li> <h5> 4. Face sideway, Stand straight </h5> </li>
        <li> <h5> 5. Photo will be taken 5 seconds after you pressed the camera button  </h5> </li>
        <li> <button id="button1" onclick="snapshot(); hideVideo(); countdown(); hideInstructionOne(); appearInstructionTwo(); "> <%= image_tag "camera.png" %> </button> </li>
      </ul>

      <div class="countdown" id="countdown"></div>

      <%= simple_form_for @assessment, html: { class: "hidden", id: :hidden } do |f| %>
        <%= f.input :angle1, as: :hidden %>
        <%= f.input :angle2, as: :hidden %>
        <%= f.input :angle3, as: :hidden %>
        <%= f.input :photo, as: :hidden %>
        <ul> <h5>Now please click on the following points in the photo. After clicking all 5 points, Submit for results</h5>
          <li><h5> <%= image_tag "cursor.png" %> Ear </h5></li>
          <li><h5> <%= image_tag "cursor.png" %> Shoulder </h5></li>
          <li><h5> <%= image_tag "cursor.png" %> Hip </h5></li>
          <li><h5> <%= image_tag "cursor.png" %> Knee </h5></li>
          <li><h5> <%= image_tag "cursor.png" %> Ankle </h5></li>
          <li> <%= f.button :submit, "Submit for result", class: "btn", id: "submitForm" %> </li>
          <li><a href="http://res.cloudinary.com/db9cynf8x/image/upload/v1520921096/jgueaptphzbaavzl46g3.png" target="_blank">
          Click here for sample picture
        </a></li>
        </ul>

      <% end %>
    </div>
    <div class="camera-container text-center">
      <body onload="init(); startWebcam(); buttonDisable();">
      <!--     <button onclick="stopWebcam();">Stop WebCam</button>-->
      <video width=800 height=600 id="video" autoplay></video>
      <canvas  id="myCanvas" width="800" height="600"></canvas>
    </div>
  </div>
</div>

